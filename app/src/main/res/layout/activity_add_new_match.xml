<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".AddNewMatchActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_add_new_match_toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:elevation="5dp"
        app:title="Add New Match"
        android:background="@color/white">
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_below="@+id/activity_add_new_match_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:scrollbarAlwaysDrawVerticalTrack="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
                android:background="@color/white_shed"
                android:layout_below="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:text="Enter Match Details"
                        android:textSize="18dp"
                        android:textColor="@color/sky_blue"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        />
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Match Title">
                        <EditText
                            android:id="@+id/add_match_title"
                            android:text=""
                            android:paddingLeft="10dp"
                            android:inputType="textNoSuggestions"
                            android:textSize="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:hint="Match Date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <EditText
                            android:id="@+id/add_match_date"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:text=""
                            android:paddingLeft="10dp"
                            android:drawableRight="@drawable/ic_date"
                            android:textSize="16dp"
                            android:inputType="textNoSuggestions"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:hint="Match Time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/add_match_time"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:paddingLeft="10dp"
                            android:textSize="16dp"
                            android:drawableRight="@drawable/ic_time"
                            android:inputType="text"
                            android:text=""
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:hint="Match Key"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/add_match_key"
                            android:paddingLeft="10dp"
                            android:textSize="16dp"
                            android:inputType="number"
                            android:text=""
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:hint="Match Image Link"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/add_match_pic_link"
                            android:inputType="text"
                            android:text=""
                            android:textSize="16dp"
                            android:paddingLeft="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Match Map">
                        <EditText
                            android:id="@+id/add_match_map"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                            android:paddingLeft="10dp"
                            android:inputType="text"
                            android:textSize="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Match Version">
                        <EditText
                            android:id="@+id/add_match_version"
                            android:text=""
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                            android:paddingLeft="10dp"
                            android:inputType="text"
                            android:textSize="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Match Type">
                        <EditText
                            android:id="@+id/add_match_type"
                            android:text=""
                            android:paddingLeft="10dp"
                            android:inputType="text"
                            android:textSize="16dp"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Match Winning Prize">
                        <EditText
                            android:id="@+id/add_match_winning_prize"
                            android:text=""
                            android:paddingLeft="10dp"
                            android:inputType="number"
                            android:textSize="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Match Per Kill">
                        <EditText
                            android:id="@+id/add_match_per_kill"
                            android:text=""
                            android:paddingLeft="10dp"
                            android:inputType="number"
                            android:textSize="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Match Entry Fee">
                        <EditText
                            android:id="@+id/add_match_entry_fee"
                            android:text=""
                            android:paddingLeft="10dp"
                            android:inputType="number"
                            android:textSize="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Match Total Spots">
                        <EditText
                            android:id="@+id/add_match_total_spot"
                            android:text=""
                            android:paddingLeft="10dp"
                            android:inputType="number"
                            android:textSize="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Match Status">
                        <EditText
                            android:id="@+id/add_match_status"
                            android:text=""
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                            android:paddingLeft="10dp"
                            android:inputType="text"
                            android:textSize="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Match ID show">
                        <EditText
                            android:id="@+id/add_match_show_id"
                            android:text=""
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                            android:paddingLeft="10dp"
                            android:inputType="text"
                            android:textSize="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:hint="Match Watch Link"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/add_match_watch_link"
                            android:inputType="text"
                            android:text=""
                            android:textSize="16dp"
                            android:paddingLeft="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>


                    <Button
                        android:id="@+id/add_submit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/my_button"
                        android:layout_marginTop="30dp"
                        android:text="SUBMIT"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>



</RelativeLayout>