<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".UpdateResultActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_update_result_toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:elevation="5dp"
        app:title="Update Result"
        android:background="@color/white">
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_below="@+id/activity_update_result_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:scrollbarAlwaysDrawVerticalTrack="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
                android:background="@color/white_shed"
                android:layout_below="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:text="Edit Match Result"
                        android:textSize="18dp"
                        android:textColor="@color/sky_blue"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        />
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Name">
                        <EditText
                            android:id="@+id/update_result_name"
                            android:text=""
                            android:paddingLeft="10dp"
                            android:inputType="text"
                            android:enabled="false"
                            android:textSize="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:hint="Pubg Username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <EditText
                            android:id="@+id/update_result_username"
                            android:enabled="false"
                            android:text=""
                            android:paddingLeft="10dp"
                            android:textSize="16dp"
                            android:inputType="text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:hint="DOB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/update_result_dob"
                            android:enabled="false"
                            android:paddingLeft="10dp"
                            android:textSize="16dp"
                            android:inputType="text"
                            android:text=""
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:hint="Email Address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/update_result_email"
                            android:paddingLeft="10dp"
                            android:textSize="16dp"
                            android:inputType="number"
                            android:enabled="false"
                            android:text=""
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:hint="Gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/update_result_gender"
                            android:inputType="text"
                            android:text=""
                            android:enabled="false"
                            android:textSize="16dp"
                            android:paddingLeft="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Mobile Number">
                        <EditText
                            android:id="@+id/update_result_mobile"
                            android:enabled="false"
                            android:paddingLeft="10dp"
                            android:inputType="text"
                            android:textSize="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password">
                        <EditText
                            android:id="@+id/update_result_password"
                            android:text=""
                            android:enabled="false"
                            android:paddingLeft="10dp"
                            android:inputType="textPassword"
                            android:textSize="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="UID">
                        <EditText
                            android:id="@+id/update_result_uid"
                            android:text=""
                            android:paddingLeft="10dp"
                            android:inputType="text"
                            android:textSize="16dp"
                            android:enabled="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Profile Pic Link">
                        <EditText
                            android:id="@+id/update_result_profile_pic_link"
                            android:text=""
                            android:paddingLeft="10dp"
                            android:inputType="text"
                            android:enabled="false"
                            android:textSize="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Promo Code">
                        <EditText
                            android:id="@+id/update_result_promo"
                            android:text=""
                            android:paddingLeft="10dp"
                            android:inputType="text"
                            android:enabled="false"
                            android:textSize="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Match Played">
                        <EditText
                            android:id="@+id/update_result_match_played"
                            android:text=""
                            android:paddingLeft="10dp"
                            android:inputType="number"
                            android:enabled="false"
                            android:textSize="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Total Kills">
                        <EditText
                            android:id="@+id/update_result_totalkills"
                            android:text=""
                            android:paddingLeft="10dp"
                            android:inputType="number"
                            android:textSize="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Total Winnings">
                        <EditText
                            android:id="@+id/update_result_winnings"
                            android:text=""
                            android:paddingLeft="10dp"
                            android:inputType="number"
                            android:textSize="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Wallet Coins">
                        <EditText
                            android:id="@+id/update_result_walletcoins"
                            android:text=""
                            android:paddingLeft="10dp"
                            android:enabled="false"
                            android:inputType="number"
                            android:textSize="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Winner">
                        <EditText
                            android:id="@+id/update_result_winner"
                            android:text=""
                            android:focusable="false"
                            android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                            android:focusableInTouchMode="false"
                            android:paddingLeft="10dp"
                            android:inputType="text"
                            android:textSize="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>


                    <Button
                        android:id="@+id/result_submit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/my_button"
                        android:layout_marginTop="30dp"
                        android:text="UPDATE"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>



</RelativeLayout>